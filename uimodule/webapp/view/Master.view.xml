<mvc:View xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:mvc="sap.ui.core.mvc" controllerName="eu.kuhnchris.artviewer.artViewer.controller.Master"
    xmlns:core="sap.ui.core">
    <semantic:SemanticPage id="masterPage" preserveHeaderStateOnScroll="true" toggleHeaderOnTitleClick="false">
        <semantic:titleHeading>
            <Title id="masterPageTitle" text="{masterView>/title}" level="H2"/>
        </semantic:titleHeading>
        <semantic:content>
            <VBox>
                <List items="{/files}" itemPress="showArt">
                    <StandardListItem type="Navigation"  title="{Name}" description="{Filename}" icon="{URL}" iconDensityAware="false" iconInset="false" />
                </List>
            </VBox>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>