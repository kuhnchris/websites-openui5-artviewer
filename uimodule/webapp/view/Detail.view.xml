<mvc:View xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:footerbar="sap.ushell.ui.footerbar"
    xmlns:mvc="sap.ui.core.mvc" controllerName="eu.kuhnchris.artviewer.artViewer.controller.Detail">
    <semantic:SemanticPage id="detailPage" busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}" showFooter="true">
        <semantic:titleHeading>
            <Title text="{appName}" level="H2" id="textAppName"/>
        </semantic:titleHeading>
        <semantic:content>
            <Image src="{/URL}"></Image>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>